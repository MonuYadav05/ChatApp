{
  "name": "Excalidraw",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=web",
    "dev": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start-web": "cd ./apps/wed && npm run start",
    "db:generate": "cd packages/database && npx prisma generate && cd ../.."
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "prisma": "^6.4.1"
  }
}